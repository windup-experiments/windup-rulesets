<?xml version="1.0"?>
<ruletest id="logging-net-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <testDataPath>data/</testDataPath>
    <rulePath>../logging.net.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="logging-net-0000-test">
                <when>
                    <not>
                        <hint-exists message="Logging to the Event Log is not recommended for cloud native apps." />
                    </not>
                </when>
                <perform>
                    <fail message="logging-net-0000 hint not found." />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>