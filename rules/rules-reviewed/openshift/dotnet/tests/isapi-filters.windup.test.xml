<?xml version="1.0"?>
<ruletest id="isapi-filters-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <testDataPath>data/</testDataPath>
    <rulePath>../isapi-filters.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="isapi-filters-0000-test">
                <when>
                    <not>
                        <hint-exists message="Unsupported IIS module : ISAPI Filters" />
                    </not>
                </when>
                <perform>
                    <fail message="isapi-filters-0000 hint not found." />
                </perform>
            </rule>
            <rule id="isapi-filters-0100-test">
                <when>
                    <not>
                        <hint-exists message="Unsupported IIS module : ISAPI Filters" />
                    </not>
                </when>
                <perform>
                    <fail message="isapi-filters-0000 hint not found." />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>