<?xml version="1.0"?>
<ruletest id="oracle-umanaged-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <testDataPath>data/</testDataPath>
    <rulePath>../oracle-umanaged.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="oracle-umanaged-0000-test">
                <when>
                    <not>
                        <hint-exists message="Oracle unmanaged driver requires including binaries with app. It can use buildpack." />
                    </not>
                </when>
                <perform>
                    <fail message="oracle-umanaged-0000 hint not found." />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>