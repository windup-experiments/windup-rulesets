<?xml version="1.0"?>
<ruletest id="sharepoint-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <testDataPath>data/</testDataPath>
    <rulePath>../sharepoint.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="sharepoint-0000-test">
                <when>
                    <not>
                        <hint-exists message="SharePoint is not supported in a cloud environment." />
                    </not>
                </when>
                <perform>
                    <fail message="sharepoint-0000 hint not found." />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>