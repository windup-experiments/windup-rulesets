<?xml version="1.0"?>
<ruleset id="isapi-filters"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net isapi-filters topics when migrating an application to cloud environments.
        </description>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>isapi-filters</tag>
    </metadata>
    <rules>
        <rule id="isapi-filters-00000">
            <when>
                <filecontent filename="{*}.{ext}" pattern="{section}"/>
            </when>
			<where param="ext">
				<matches pattern="(cs|vb)" />
			</where>
			<where param="section">
				<matches pattern="GetSection\(.system\.webServer\/isapiFilters.\)"/>
			</where>
			
            <perform>
				<hint title="Unsupported IIS module : ISAPI Filters" effort="13" category-id="cloud-mandatory">
					<message>Unsupported IIS module : ISAPI Filters
					</message>
					<tag>isapi-filters</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
		<rule id="isapi-filters-01000">
            <when>
                <filecontent filename="{*}.config" pattern="isapiFilters"/>
            </when>			
            <perform>
				<hint title="Unsupported IIS module : ISAPI Filters" effort="13" category-id="cloud-mandatory">
					<message>Unsupported IIS module : ISAPI Filters
					</message>
					<tag>isapi-filters</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
    </rules>
</ruleset>