<?xml version="1.0"?>
<ruleset id="windowsRegistry"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net windowsRegistry topics when migrating an application to cloud environments.
        </description>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>windowsRegistry</tag>
    </metadata>
    <rules>
        <rule id="windowsRegistry-00000">
            <when>
                <filecontent filename="{*}.{ext}" pattern="{reg}"/>
            </when>
			<where param="ext">
				<matches pattern="(cs|vb)" />
			</where>
			<where param="reg">
				<matches pattern="(RegistryKey|Registry)" />
			</where>
            <perform>
				<hint title="Unsupported module : Windows Registry" effort="5" category-id="cloud-mandatory">
					<message>External configurations should be made available by environment variables or some other external service.
					</message>
					<tag>windowsRegistry</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
    </rules>
</ruleset>